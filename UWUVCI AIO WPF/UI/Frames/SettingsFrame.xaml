<Page x:Class="UWUVCI_AIO_WPF.UI.Frames.SettingsFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      Title="SettingsFrame"
      Background="Transparent">

    <Page.Resources>
        <!-- Label resources keep button text centralized for future localization -->
        <sys:String x:Key="SettingsCheckUpdatesLabel">Check For Updates</sys:String>
        <sys:String x:Key="SettingsShowTutorialLabel">Show Tutorial Screens</sys:String>
        <sys:String x:Key="SettingsSubmitCompatLabel">Submit Compatibility Entry</sys:String>
        <sys:String x:Key="SettingsSubmitFeedbackLabel">Submit Feedback or Bug Report</sys:String>
    </Page.Resources>

    <Grid Margin="12,6,12,6">
        <!-- Outer border -->
        <Border BorderBrush="{DynamicResource AppAccentBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Background="{DynamicResource AppSurfaceBrush}"
                SnapsToDevicePixels="True">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="*"/>
                    <!-- Buttons -->
                    <RowDefinition Height="Auto"/>
                    <!-- Footer -->
                </Grid.RowDefinitions>

                <!-- HEADER BAR -->
                <Border Background="{DynamicResource AppAccentBrush}"
                        CornerRadius="5,5,0,0"
                        Height="36"
                        VerticalAlignment="Top">
                    <Grid>
                        <TextBlock Text="Settings"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"
                                   Foreground="{DynamicResource AppTextBrush}"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                        <Label x:Name="lblVersion"
                               Content="Loading..."
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0,0,12,0"
                               Foreground="{DynamicResource AppMutedTextBrush}"
                               FontSize="13"
                               FontWeight="Medium"/>
                    </Grid>
                </Border>

                <!-- BUTTONS -->
                <StackPanel Grid.Row="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,30,0,30"
                            Width="460">

                    <!-- Row 1 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="{StaticResource SettingsCheckUpdatesLabel}"
                                Width="145" Margin="0,0,8,8"
                                Click="Button_Click_6"/>
                        <Button Content="Update Tools"
                                Width="145" Margin="0,0,8,8"
                                Click="Button_Click_7"/>
                        <Button Content="Update Base Files"
                                Width="145" Margin="0,0,0,8"
                                Click="Button_Click_3"/>
                    </StackPanel>

                    <!-- Row 2 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Reset Don't show this again Option"
                                Width="297" Margin="0,0,8,8"
                                Click="Button_Click_10"/>
                        <Button Content="Reset TitleKeys"
                                Width="145" Margin="0,0,0,8"
                                Click="Button_Click_8"/>
                    </StackPanel>

                    <!-- Individual buttons -->
                    <Button Content="Start Nintendont Config Tool"
                            Width="460" Margin="0,0,0,8"
                            Click="Button_Click_9"/>
                    <Button Content="Start N64 Virtual Console INI Creator"
                            Width="460" Margin="0,0,0,8"
                            Click="Button_Click_4"/>
                    <Button Content="{StaticResource SettingsShowTutorialLabel}"
                            Width="460" Margin="0,0,0,8"
                            Click="ShowTutorialScreens_Click"/>
                    <Button Content="Open App Settings"
                            Width="460" Margin="0,0,0,8"
                            Click="OpenAppSettings_Click"/>
                    <Button Content="Open ReadMe"
                            Width="460" Margin="0,0,0,8"
                            Click="HelpButton_Click"
                            ToolTip="View ZestyTS' UWUVCI documentation and FAQs"/>
                    <Button Content="Open Patch Notes"
                            Width="460" Margin="0,0,0,8"
                            Click="OpenPatchNotes_Click"
                            ToolTip="View ZestyTS' UWUVCI Patch Notes"/>
                    <Button Content="{StaticResource SettingsSubmitCompatLabel}"
                            Width="460"
                            Click="OpenCompatSubmit_Click"/>
                    <Button Content="{StaticResource SettingsSubmitFeedbackLabel}"
                            Width="460" Margin="0,8,0,0"
                            Click="OpenFeedbackWindow_Click"
                            ToolTip="Report bugs, suggest features, or give feedback anonymously."/>
                </StackPanel>

                <!-- FOOTER -->
                <Grid Grid.Row="2" Margin="12,0,12,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Ko-Fi Button -->
                    <Button Grid.Column="0"
                            Width="60" Height="50"
                            ToolTip="Support ZestyTS' UWUVCI V3 on Ko-Fi"
                            Click="Button_Click_13"
                            Background="{DynamicResource AppAccentBrush}"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Image Source="/UI/Images/61e111774d3a2f67c827cd25_Frame 5.png"
                               Width="36" Height="36"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>

                    <!-- Credits Button -->
                    <Button Grid.Column="2"
                            Content="Credits"
                            Width="80" Height="32"
                            Click="Button_Click_5"
                            Background="{DynamicResource AppAccentBrush}"
                            Foreground="{DynamicResource AppTextBrush}"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"/>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Page>
