<Window x:Class="UWUVCI_AIO_WPF.UI.Windows.CompatEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Compatibility Entry"
        Height="500" Width="580"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF3F3F3">

    <!-- ========== Resources & Styles (pure WPF) ========== -->
    <Window.Resources>
        <!-- TextBox focus style -->
        <Style TargetType="TextBox">
            <Setter Property="KeyboardNavigation.TabNavigation" Value="Continue"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF2196F3"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Button style (rounded, hover/pressed) -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF42A5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1E88E5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary (grey) button -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF757575"/>
        </Style>
    </Window.Resources>

    <!-- ========== Layout ========== -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Console -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Console:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox x:Name="ConsoleBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"
                  SelectionChanged="ConsoleBox_SelectionChanged">
            <ComboBoxItem Content="NES"/>
            <ComboBoxItem Content="SNES"/>
            <ComboBoxItem Content="GBA"/>
            <ComboBoxItem Content="N64"/>
            <ComboBoxItem Content="TG16"/>
            <ComboBoxItem Content="MSX"/>
            <ComboBoxItem Content="Wii"/>
            <ComboBoxItem Content="NDS"/>
        </ComboBox>

        <!-- Game Fields -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Game Name:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="GameNameBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Game Region:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox x:Name="GameRegionBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
            <ComboBoxItem Content="USA"/>
            <ComboBoxItem Content="EUR"/>
            <ComboBoxItem Content="JPN"/>
            <ComboBoxItem Content="KOR"/>
            <ComboBoxItem Content="AUS"/>
            <ComboBoxItem Content="Other"/>
        </ComboBox>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Base Name:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <!-- Base Selection -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Base:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical">
            <ComboBox x:Name="BaseBox"
              Margin="0,0,0,6"
              SelectionChanged="BaseBox_SelectionChanged"
              IsEditable="False"
              ToolTip="Select a base for this console"/>

            <!-- Hidden custom input field -->
            <TextBox x:Name="CustomBaseBox"
             Margin="0,0,0,8"
             Visibility="Collapsed"
             ToolTip="Only visible if you choose 'Custom'"
             />
        </StackPanel>

        <!-- Status + Conditional Panels -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Status:" Width="160" VerticalAlignment="Center"/>
                <ComboBox x:Name="StatusBox" Width="200">
                    <ComboBoxItem Content="0 - Doesn't Work"/>
                    <ComboBoxItem Content="1 - Issues"/>
                    <ComboBoxItem Content="2 - Works"/>
                </ComboBox>
            </StackPanel>

            <!-- Wii-only -->
            <StackPanel x:Name="WiiPanel" Orientation="Horizontal" Visibility="Collapsed" Margin="0,0,0,8">
                <TextBlock Text="GamePad:" Width="160" VerticalAlignment="Center"/>
                <ComboBox x:Name="GamePadBox" Width="200">
                    <ComboBoxItem Content="0 - No Support"/>
                    <ComboBoxItem Content="1 - Partial"/>
                    <ComboBoxItem Content="2 - Full"/>
                </ComboBox>
            </StackPanel>

            <!-- NDS-only -->
            <StackPanel x:Name="NdsPanel" Orientation="Horizontal" Visibility="Collapsed" Margin="0,0,0,8">
                <TextBlock Text="Render Size:" Width="160" VerticalAlignment="Center"/>
                <TextBox x:Name="RenderSizeBox" Width="80"
                         PreviewTextInput="RenderSizeBox_PreviewTextInput"
                         ToolTip="Enter a number (e.g. 2 → '2x')"/>
                <TextBlock Text="x" FontSize="16" Margin="5,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Notes (big, obvious, focusable) -->
            <TextBlock Text="Notes:" Margin="0,12,0,4" FontWeight="Bold"/>
            <Border BorderBrush="#FF2196F3"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="4"
                    Background="White"
                    Margin="0,0,0,8">
                <TextBox x:Name="NotesBox"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Foreground="Black"
                         BorderThickness="0"
                         FontSize="14"
                         Padding="6"
                         MinHeight="100"
                         Focusable="True"
                         ToolTip="Add any comments or observations here (e.g. issues, controller quirks, etc.)"/>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Click="Cancel_Click" Style="{StaticResource SecondaryButton}"/>
            <Button Content="Submit PR" Click="Submit_Click"/>
        </StackPanel>
    </Grid>
</Window>
