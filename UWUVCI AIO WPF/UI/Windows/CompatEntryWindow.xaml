<Window x:Class="UWUVCI_AIO_WPF.UI.Windows.CompatEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Compatibility Entry"
        Height="440" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"   />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Console -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Console:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox x:Name="ConsoleBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"
                  SelectionChanged="ConsoleBox_SelectionChanged">
            <ComboBoxItem Content="NES"/>
            <ComboBoxItem Content="SNES"/>
            <ComboBoxItem Content="GBA"/>
            <ComboBoxItem Content="N64"/>
            <ComboBoxItem Content="TG16"/>
            <ComboBoxItem Content="MSX"/>
            <ComboBoxItem Content="Wii"/>
            <ComboBoxItem Content="NDS"/>
        </ComboBox>

        <!-- Game Fields -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Game Name:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="GameNameBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Game Region:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox x:Name="GameRegionBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
            <ComboBoxItem Content="USA"/>
            <ComboBoxItem Content="EUR"/>
            <ComboBoxItem Content="JPN"/>
            <ComboBoxItem Content="KOR"/>
            <ComboBoxItem Content="AUS"/>
            <ComboBoxItem Content="Other"/>
        </ComboBox>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Base Name:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="BaseNameBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Base Region:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox x:Name="BaseRegionBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8">
            <ComboBoxItem Content="USA"/>
            <ComboBoxItem Content="EUR"/>
            <ComboBoxItem Content="JPN"/>
            <ComboBoxItem Content="KOR"/>
            <ComboBoxItem Content="AUS"/>
            <ComboBoxItem Content="Other"/>
        </ComboBox>

        <!-- Status + Conditional Panels -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Vertical">

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Status:" Width="160" VerticalAlignment="Center"/>
                <ComboBox x:Name="StatusBox" Width="200">
                    <ComboBoxItem Content="0 - Doesn't Work"/>
                    <ComboBoxItem Content="1 - Issues"/>
                    <ComboBoxItem Content="2 - Works"/>
                </ComboBox>
            </StackPanel>

            <!-- Wii-only -->
            <StackPanel x:Name="WiiPanel" Orientation="Horizontal" Visibility="Collapsed" Margin="0,0,0,8">
                <TextBlock Text="GamePad:" Width="160" VerticalAlignment="Center"/>
                <ComboBox x:Name="GamePadBox" Width="200">
                    <ComboBoxItem Content="0 - No Support"/>
                    <ComboBoxItem Content="1 - Partial"/>
                    <ComboBoxItem Content="2 - Full"/>
                </ComboBox>
            </StackPanel>

            <!-- NDS-only -->
            <StackPanel x:Name="NdsPanel" Orientation="Horizontal" Visibility="Collapsed" Margin="0,0,0,8">
                <TextBlock Text="Render Size:" Width="160" VerticalAlignment="Center"/>
                <TextBox x:Name="RenderSizeBox" Width="80" PreviewTextInput="RenderSizeBox_PreviewTextInput" ToolTip="Enter a number (e.g. 2 → '2x')"/>
                <TextBlock Text="x" FontSize="16" Margin="5,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Notes -->
            <TextBlock Text="Notes:" Margin="0,0,0,4"/>
            <TextBox x:Name="NotesBox"
                     AcceptsReturn="True"
                     Height="100"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     ToolTip="Add any comments or observations." Text=""/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="100" Margin="0,12,8,0" Click="Cancel_Click"/>
            <Button Content="Submit PR" Width="120" Margin="0,12,0,0" Click="Submit_Click"/>
        </StackPanel>
    </Grid>
</Window>
