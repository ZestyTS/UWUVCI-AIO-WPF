<Window x:Class="UWUVCI_AIO_WPF.UI.Windows.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Feedback"
        Height="520" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF3F3F3">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Info Banner -->
            <RowDefinition Height="Auto"/>
            <!-- Type Selector -->
            <RowDefinition Height="*"/>
            <!-- Description -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Submit Feedback"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>

        <!-- Info Banner -->
        <Border Grid.Row="1"
                Background="#FFFBE9E7"
                BorderBrush="#FFEF6C00"
                BorderThickness="1"
                Padding="10"
                Margin="0,0,0,10">
            <TextBlock Text="⚠️ This form is for anonymous bug reports or feature requests only.  
Do NOT use this for personal support — use the official support channels instead."
                       TextWrapping="Wrap"
                       Foreground="#FF6D4C41"
                       FontWeight="Bold"/>
        </Border>

        <!-- Type selector -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,12">
            <TextBlock Text="Type:"
                       VerticalAlignment="Center"
                       Width="90"
                       Margin="0,0,10,0"/>
            <ComboBox x:Name="TypeBox"
                      Width="200"
                      SelectedIndex="0">
                <ComboBoxItem Content="Bug Report"/>
                <ComboBoxItem Content="Feature Request"/>
                <ComboBoxItem Content="Enhancement"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>
        </StackPanel>

        <!-- Description box -->
        <Border Grid.Row="3"
                BorderBrush="#FF2196F3"
                BorderThickness="1"
                CornerRadius="5"
                Background="White">
            <TextBox x:Name="DescriptionBox"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     BorderThickness="0"
                     FontSize="14"
                     Padding="6"
                     ToolTip="Describe your issue or suggestion in as much detail as possible."
                     />
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel"
                    Click="Cancel_Click"
                    Background="#FF757575"
                    Foreground="White"
                    Margin="0,0,8,0"
                    Padding="10,4"/>
            <Button Content="Submit"
                    Click="Submit_Click"
                    Background="#FF2196F3"
                    Foreground="White"
                    Padding="10,4"/>
        </StackPanel>
    </Grid>
</Window>
