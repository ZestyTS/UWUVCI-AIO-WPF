<Window x:Class="UWUVCI_AIO_WPF.UI.Windows.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Feedback or Bug Report"
        Height="560" Width="580"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF3F3F3">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Info Banner -->
        <Border Background="#FFFBE9E7"
                BorderBrush="#FFEF6C00"
                BorderThickness="1"
                Padding="10"
                Margin="0,0,0,10">
            <TextBlock Text="⚠️ This form is for anonymous bug reports or feature requests only.  
Do NOT use this for personal support — use the official support channels instead."
                       TextWrapping="Wrap"
                       Foreground="#FF6D4C41"
                       FontWeight="Bold"/>
        </Border>

        <!-- Report Type -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Report Type:" Width="100" VerticalAlignment="Center"/>
            <ComboBox x:Name="TypeBox" Width="200" SelectedIndex="0">
                <ComboBoxItem Content="Bug Report"/>
                <ComboBoxItem Content="Feature Request"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>
        </StackPanel>

        <!-- Description -->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock Text="Description:" FontWeight="Bold" Margin="0,0,0,4"/>
            <Border BorderBrush="#FF2196F3" BorderThickness="1" CornerRadius="4" Background="White">
                <TextBox x:Name="DescriptionBox"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Padding="6"
                         MinHeight="220"
                         FontSize="14"
                         ToolTip="Describe the bug or feature suggestion in detail."/>
            </Border>

            <!-- Options -->
            <StackPanel Orientation="Vertical" Margin="0,12,0,0">
                <CheckBox x:Name="IncludeSystemInfoBox"
                          Content="Include system information (recommended for bug reports)"
                          Margin="0,0,0,6"/>
                <CheckBox x:Name="IncludeLogFileBox"
                          Content="Attach latest log file (from UWUVCI Logs folder)"
                          Margin="0,0,0,6"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel"
                    Width="100"
                    Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Content="Submit"
                    Width="120"
                    Click="Submit_Click"
                    Background="#FF2196F3"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
