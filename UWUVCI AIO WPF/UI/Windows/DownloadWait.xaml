<Window x:Class="UWUVCI_AIO_WPF.UI.Windows.DownloadWait"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Downloading" Height="120" Width="500"
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        Foreground="White" Background="LightGray" ResizeMode="NoResize"
        Icon="/UWUVCI AIO WPF;component/b.ico"
        BorderBrush="#FF2196F3" BorderThickness="1.5"
        Closed="wind_Closed">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="Key" 
                       FontSize="18" 
                       Foreground="Black"
                       TextAlignment="Center"/>

            <TextBlock x:Name="msgT" 
                       FontSize="11" 
                       Foreground="Black"
                       TextAlignment="Center"
                       Margin="0,4,0,0"/>

            <ProgressBar x:Name="pb"
                         Height="14" 
                         Margin="0,6,0,0"/>

            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="75"
                    Height="28"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,10"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
