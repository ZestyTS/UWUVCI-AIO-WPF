<Window x:Class="UWUVCI_AIO_WPF.UI.Windows.TutorialWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UWUVCI V3 Tutorial"
        Height="480"
        Width="1024"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8FAFC">

    <Window.Resources>

        <!-- UWUVCI Button Style -->
        <Style x:Key="UWUVCI_ButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#FF1A1A1A"/>
            <Setter Property="Background" Value="#FFEDF3FA"/>
            <Setter Property="BorderBrush" Value="#FFB6C6D8"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <!-- Increase padding/height for better readability -->
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Height" Value="32"/>
            <!-- Provide a sensible minimum without forcing fixed width -->
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFCCE4FF"/>
                                <Setter Property="BorderBrush" Value="#FF0078D7"/>
                                <Setter Property="Foreground" Value="#FF004A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFB6D4FB"/>
                                <Setter Property="BorderBrush" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFE6EBF2"/>
                                <Setter Property="BorderBrush" Value="#FFD4D9E0"/>
                                <Setter Property="Foreground" Value="#FF9CA4AD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="130" MaxWidth="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="#FFEAF1F9" Padding="20" BorderBrush="#FFCBD6E2" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="Tutorial Progress"
                           Foreground="#FF1A1A1A"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,10,0,20"/>

                <ProgressBar x:Name="ProgressBar"
                             Minimum="0"
                             Maximum="100"
                             Height="8"
                             Foreground="#FF0078D7"
                             Background="#FFDFE9F3"
                             Value="0"
                             Margin="0,0,0,20"/>

                <ItemsControl x:Name="StepList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       Foreground="#FF1A1A1A"
                                       FontSize="13"
                                       Margin="0,5,0,5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="28,20,32,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Width="Auto" MaxWidth="780" Margin="0,0,0,10">
                    <TextBlock x:Name="TitleBlock"
                               Text="Welcome to Ultimate Wii U Virtual Console Injector (UWUVCI) V3!"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#FF1A1A1A"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="BodyBlock"
                               FontSize="15"
                               Foreground="#FF4A4A4A"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>

                    <Separator Margin="0,8,0,8" Background="#FFCBD6E2"/>

                    <TextBlock x:Name="DetailsBlock"
                               FontSize="15"
                               Foreground="#FF4A4A4A"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>

                    <TextBlock x:Name="HelperNote"
                               FontSize="15"
                               Foreground="#FF4A4A4A"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <!-- Agreement Checkbox -->
                    <StackPanel x:Name="AgreementPanel"
                                Orientation="Vertical"
                                Visibility="Collapsed"
                                Margin="0,15,0,0">
                        <CheckBox x:Name="AgreementCheck"
                                  Content="I have read and understood the tutorial and FAQ."
                                  Foreground="#FF1A1A1A"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>
                        <CheckBox x:Name="AgreementCheck2"
                                  Content="I agree that all of my submissions will be appropriate, and am okay with the fingerprint."
                                  Foreground="#FF1A1A1A"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>
                        <CheckBox x:Name="AgreementCheck3"
                                  Content="I will use the program appropriately and understand how and when to ask for support."
                                  Foreground="#FF1A1A1A"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <DockPanel Grid.Row="1" Margin="0,10,0,0" LastChildFill="False">
                <!-- Right-side Navigation Buttons (reserve space first) -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button x:Name="PatchNotesButton"
                            Style="{StaticResource UWUVCI_ButtonStyle}"
                            Content="Patch Notes"
                            Click="PatchNotesButton_Click"
                            Visibility="Collapsed"
                            Margin="0,0,8,0"/>

                    <Button x:Name="BackButton"
                            Style="{StaticResource UWUVCI_ButtonStyle}"
                            Content="Back"
                            Click="BackButton_Click"
                            Margin="0,0,8,0"/>

                    <Button x:Name="NextButton"
                            Style="{StaticResource UWUVCI_ButtonStyle}"
                            Content="Next"
                            Background="#FF0078D7"
                            Foreground="White"
                            BorderBrush="#FF005A9E"
                            Click="NextButton_Click"/>
                </StackPanel>

                <!-- Left-side Action Buttons -->
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" x:Name="ExtraButtonsPanel" Margin="0,0,10,0">
                    <Button x:Name="ZestyButton"
                            Style="{StaticResource UWUVCI_ButtonStyle}"
                            Content="Zesty's Corner"
                            Click="ZestyButton_Click"
                            Visibility="Collapsed"
                            Margin="0,0,8,0"/>

                    <Button x:Name="DiscordButton"
                            Style="{StaticResource UWUVCI_ButtonStyle}"
                            Content="Discord"
                            Click="DiscordButton_Click"
                            Visibility="Collapsed"
                            Margin="0,0,8,0"/>

                    <Button x:Name="DonateButton"
                            Style="{StaticResource UWUVCI_ButtonStyle}"
                            Content="Donate"
                            Click="DonateButton_Click"
                            Visibility="Collapsed"
                            Margin="0,0,8,0"/>

                    <Button x:Name="GameButton"
                            Style="{StaticResource UWUVCI_ButtonStyle}"
                            Content="Play My Game"
                            Click="GameButton_Click"
                            Visibility="Collapsed"
                            Margin="0,0,8,0"/>

                    <Button x:Name="ReadMeButton"
                            Style="{StaticResource UWUVCI_ButtonStyle}"
                            Content="ReadMe"
                            Click="ReadMeButton_Click"
                            Visibility="Collapsed"/>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
