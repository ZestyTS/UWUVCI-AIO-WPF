<Window x:Class="UWUVCI_AIO_WPF.UI.Windows.UWUVCI_MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UWUVCI Message"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        SizeToContent="WidthAndHeight"
        BorderThickness="2"
        BorderBrush="#FF2196F3"
        ShowInTaskbar="False"
        AllowsTransparency="False"
        Opacity="0"
        SnapsToDevicePixels="True">

    <Border x:Name="BorderRoot"
            CornerRadius="6"
            Padding="16"
            BorderThickness="2"
            BorderBrush="#FF2196F3"
            Background="White"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Vector Icon -->
            <Viewbox Width="36" Height="36" Margin="0,0,12,0">
                <Canvas>
                    <!-- Default icon (Info) -->
                    <Path x:Name="IconPath"
                          Data="M12,0A12,12 0 1,0 24,12A12,12 0 1,0 12,0ZM12,4A1.5,1.5 0 1,1 10.5,5.5A1.5,1.5 0 0,1 12,4ZM13.5,19H10.5V10H13.5Z"
                          Fill="#2196F3"/>
                </Canvas>
            </Viewbox>

            <!-- Text + Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <TextBlock x:Name="TitleBlock"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#222"
                           Margin="0,0,0,8"/>

                <TextBlock x:Name="MessageBlock"
                           TextWrapping="Wrap"
                           FontSize="13"
                           Foreground="#333"
                           Margin="0,0,0,16"/>

                <StackPanel x:Name="ButtonPanel"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="BtnYes" Content="Yes" Width="80" Height="30"
                            Margin="0,0,8,0" Click="BtnYes_Click" Visibility="Collapsed"/>
                    <Button x:Name="BtnNo" Content="No" Width="80" Height="30"
                            Margin="0,0,8,0" Click="BtnNo_Click" Visibility="Collapsed"/>
                    <Button x:Name="BtnOk" Content="OK" Width="80" Height="30"
                            Margin="0,0,8,0" Click="BtnOk_Click" Visibility="Collapsed"/>
                    <Button x:Name="BtnCancel" Content="Cancel" Width="80" Height="30"
                            Click="BtnCancel_Click" Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
