<Window x:Class="UWUVCI_AIO_WPF.UI.Windows.UWUVCI_MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="UWUVCI Message"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0"
        SizeToContent="WidthAndHeight"
        BorderBrush="#FF2196F3"
        BorderThickness="1.5"
        ShowInTaskbar="False">

    <Grid Margin="16">
        <StackPanel>
            <TextBlock x:Name="TitleBlock"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#1A1A1A"
                       Margin="0,0,0,8"/>

            <TextBlock x:Name="MessageBlock"
                       TextWrapping="Wrap"
                       FontSize="12"
                       Foreground="#333"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0"
                        x:Name="ButtonPanel">
                <Button x:Name="BtnYes" Content="Yes" Width="70" Height="28"
                        Margin="0,0,8,0"
                        Click="BtnYes_Click" Visibility="Collapsed"/>
                <Button x:Name="BtnNo" Content="No" Width="70" Height="28"
                        Margin="0,0,8,0"
                        Click="BtnNo_Click" Visibility="Collapsed"/>
                <Button x:Name="BtnOk" Content="OK" Width="70" Height="28"
                        Margin="0,0,8,0"
                        Click="BtnOk_Click" Visibility="Collapsed"/>
                <Button x:Name="BtnCancel" Content="Cancel" Width="70" Height="28"
                        Click="BtnCancel_Click" Visibility="Collapsed"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
