<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="UWUVCI_AIO_WPF.UI.Windows.ApplicationSettings"
        Title="Settings" Height="411" Width="678"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="18" FontWeight="Bold" Text="Application Settings" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1" Margin="0,8,0,0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Width="150" VerticalAlignment="Center" Text="Base Path:"/>
                <TextBox Width="360" Text="{Binding BasePath, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Browse…" Margin="8,0,0,0" Width="80" Command="{Binding BrowseBasePathCommand}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Width="150" VerticalAlignment="Center" Text="Output Path:"/>
                <TextBox Width="360" Text="{Binding OutPath, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Browse…" Margin="8,0,0,0" Width="80" Command="{Binding BrowseOutPathCommand}"/>
            </StackPanel>

            <Separator/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Width="150" VerticalAlignment="Center" Text="Common Key (ckey):"/>
                <PasswordBox Width="360" x:Name="CkeyBox" PasswordChanged="CkeyBox_OnPasswordChanged"/>
                <Button Content="Show" Margin="8,0,0,0" Width="80" Click="ToggleCkeyVisibility"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Width="150" VerticalAlignment="Center" Text="Ancast Key:"/>
                <PasswordBox Width="360" x:Name="AncastBox" PasswordChanged="AncastBox_OnPasswordChanged"/>
                <Button Content="Show" Margin="8,0,0,0" Width="80" Click="ToggleAncastVisibility"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="38">
                <CheckBox IsChecked="{Binding SetBaseOnce}" Content="Remember base path" Margin="0,0,18,0"/>
                <CheckBox IsChecked="{Binding SetOutOnce}"  Content="Remember output path"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="94" Width="627">
                <Button Content="Reset to Defaults" Command="{Binding ResetToDefaultsCommand}" />
                <Button Content="Open Settings File" Margin="8,0,0,0" Command="{Binding OpenSettingsFileCommand}" />
                <Button Content="Open Base Folder" Margin="8,0,0,0" Command="{Binding OpenBaseFolderCommand}" />
                <Button Content="Open Output Folder" Margin="8,0,0,0" Command="{Binding OpenOutFolderCommand}" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Content="Cancel" Margin="0,0,8,0" IsCancel="True"/>
            <Button Width="90" Content="Save" IsDefault="True" Command="{Binding SaveCommand}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0">
            <Button Width="144" Content="Open Log Folder" Margin="8,0,0,0" IsDefault="True" Command="{Binding OpenLogFolderCommand}"/>
        </StackPanel>
    </Grid>
</Window>
